    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0"
  },
  "dependencies": {
    "@types/assert": "^1.4.3",
    "@types/check-types": "^7.3.1",
    "@types/helmet": "0.0.44",
    "@types/mongodb": "^3.3.4",
    "@types/winston": "^2.4.4",
    "apollo-link-persisted-queries": "^0.2.2",
    "apollo-server": "^2.9.4",
    "apollo-server-express": "^2.9.4",
    "assert": "^2.0.0",
    "body-parser": "^1.19.0",
    "check-types": "^10.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "helmet": "^3.21.1",
    "http": "0.0.0",
    "mongo-getdb": "^4.1.0",
    "mongodb": "^3.3.2",
    "winston": "^3.2.1"
  }
